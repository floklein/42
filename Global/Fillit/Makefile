################################################################################
#####                              FILES VARS                              #####
################################################################################

NAME = fillit

INC = includes

SDIR = srcs
_SRC = 
SRC = $(patsubst %,$(SDIR)/%,$(_SRC))

OBJ = $(SRC:.c=.o)

################################################################################
#####                           COMPILER OPTIONS                           #####
################################################################################

CC = gcc
CFLAGS = -Wall -Wextra -Werror
OPTS = -o $(NAME) -I$(INC)

################################################################################
#####                            MAKEFILE RULES                            #####
################################################################################

.PHONY: all clean fclean re

all: $(NAME)

$(NAME):	$(OBJ)
		@$(CC) $(OBJ) $(OPTS)
		@echo "Compilation done!"

clean:
		@/bin/rm -f $(OBJ)
		@echo "*.o cleaned!"

fclean: clean
		@/bin/rm -f $(NAME)
		@echo "Cleaning done!"

re: clean all
